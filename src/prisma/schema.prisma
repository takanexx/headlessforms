datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(uuid())
  email   String   @unique
  forms   Form[]
  createdAt DateTime @default(now())
}

model Form {
  id        String     @id @default(uuid())
  title     String
  schema    Json
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  responses Response[]
  createdAt DateTime   @default(now())
}

model Response {
  id        String   @id @default(uuid())
  form      Form     @relation(fields: [formId], references: [id])
  formId    String
  answers   Json
  meta      Json?
  createdAt DateTime @default(now())
}